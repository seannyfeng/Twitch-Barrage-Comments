{
    "manifest_version": 2,
    "name": "Twitch Barrage Comments",
    "short_name": "TBC",
    "description": "Barrage Comments for Twitch",
    "version": "1.0",
    "icons": {
        "128":"icon.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches" : ["https://www.twitch.tv/*"],
        "exclude_globs": [
            "https://www.twitch.tv/directory/*",
            "https://www.twitch.tv/p/*",
            "https://www.twitch.tv/products/*",
            "https://www.twitch.tv/*/manager*",
            "https://www.twitch.tv/*/dashboard",
            "https://www.twitch.tv/broadcast",
            "https://www.twitch.tv/messages/*",
            "https://www.twitch.tv/settings",
            "https://www.twitch.tv/*/chat"
        ],
        "js": [
            "jquery-3.2.1.slim.min.js",
            "loadMsg.js"
        ],
        "run_at": "document_end"
    }],
    "permissions": [
        "activeTab",
        "storage"
    ]
}